{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "outDir": "build",
    "declaration": true,
    "sourceMap": true,
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}